{
  "kind": "collectionType",
  "collectionName": "categorias",
  "info": {
    "singularName": "categoria",
    "pluralName": "categorias",
    "displayName": "Categoria"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nombre": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
    },
    "descripcion": {
      "type": "text"
    },
    "color": {
      "type": "string",
      "default": "#007bff"
    },
    "icono": {
      "type": "string"
    },
    "activo": {
      "type": "boolean",
      "default": true
    },
    "noticias": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::noticia.noticia",
      "mappedBy": "categoria"
    }
  }
}
