		icono: 'fas fa-folder-open',
		color: '#7c3aed',
		descripcion: 'Formularios adicionales y servicios generales',
		formularios: [
			{
				nombre: 'Formulario de Reclamaciones',
				descripcion: 'Presente quejas o reclamaciones sobre servicios',
				formato: 'PDF',
				tamano: '190 KB',
