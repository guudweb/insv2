	}

	/* Search Results */
	.search-results {
		margin-bottom: 3rem;
	}

	.results-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1.5rem;
		background: white;
		border-radius: 12px 12px 0 0;
		border-bottom: 2px solid #f0f0f0;
	}

