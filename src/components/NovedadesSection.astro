---
import type { Prestacion } from '../lib/strapi';
import { getStrapiImageUrl } from '../lib/strapi';
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../i18n/utils';

interface Props {
  prestaciones: Prestacion[];
}

const { prestaciones } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Mapeo de slugs de Strapi (todos los idiomas) a URLs de páginas Astro
const slugToPageUrl: Record<string, string> = {
  // Español
  'prestaciones-medico-farmaceuticas': 'Prestaciones_Médico_Farmacéuticas',
  'subsidio-de-incapacidad-temporal': 'Subsidio_de_incapacidad_temporal',
  'subsidio-por-maternidad': 'Subsidio_por_maternidad',
  'prestaciones-por-invalidez': 'Prestaciones_por_invalidez',
  'pension-por-vejez': 'Pensión_por_vejez',
  'prestaciones-por-muerte-y-supervivencia': 'Prestaciones_por_muerte_y_supervivencia',
  'proteccion-al-empleo': 'Protección_al_empleo',
  'subsidios-familiares': 'Subsidios_familiares',
  'servicios-sociales': 'Servicios_sociales',
  // English
  'medical-pharmaceutical-benefits': 'Prestaciones_Médico_Farmacéuticas',
  'temporary-disability-allowance': 'Subsidio_de_incapacidad_temporal',
  'maternity-allowance': 'Subsidio_por_maternidad',
  'disability-benefits': 'Prestaciones_por_invalidez',
  'old-age-pension': 'Pensión_por_vejez',
  'death-and-survivors-benefits': 'Prestaciones_por_muerte_y_supervivencia',
  'employment-protection': 'Protección_al_empleo',
  'family-allowances': 'Subsidios_familiares',
  'social-services': 'Servicios_sociales',
  // Français
  'prestations-medico-pharmaceutiques': 'Prestaciones_Médico_Farmacéuticas',
  'allocation-dincapacite-temporaire': 'Subsidio_de_incapacidad_temporal',
  'allocation-de-maternite': 'Subsidio_por_maternidad',
  'prestations-dinvalidite': 'Prestaciones_por_invalidez',
  'pension-de-vieillesse': 'Pensión_por_vejez',
  'prestations-de-deces-et-de-survie': 'Prestaciones_por_muerte_y_supervivencia',
  'protection-de-lemploi': 'Protección_al_empleo',
  'allocations-familiales': 'Subsidios_familiares',
  'services-sociaux': 'Servicios_sociales',
  // Português
  'beneficios-medico-farmaceuticos': 'Prestaciones_Médico_Farmacéuticas',
  'subsidio-de-incapacidade-temporaria': 'Subsidio_de_incapacidad_temporal',
  'subsidio-de-maternidade': 'Subsidio_por_maternidad',
  'prestacoes-por-invalidez': 'Prestaciones_por_invalidez',
  'pensao-por-velhice': 'Pensión_por_vejez',
  'prestacoes-por-morte-e-sobrevivencia': 'Prestaciones_por_muerte_y_supervivencia',
  'protecao-ao-emprego': 'Protección_al_empleo',
  // 'subsidios-familiares' is the same in Spanish and Portuguese (already mapped above)
  'servicos-sociais': 'Servicios_sociales'
};

// Función helper para convertir slug de Strapi a URL de página
function getPageUrl(slug: string): string {
  if (slugToPageUrl[slug]) {
    return slugToPageUrl[slug];
  }
  return `prestacion/${slug}`;
}
---

<div class="portfolio-col">
  <div class="container">
    <h2 class="card-header">{t('home.services')}</h2>
    <div class="row">
      {prestaciones.map((prestacion) => {
        const imageUrl = prestacion.imagen ? getStrapiImageUrl(prestacion.imagen.url) : '/images/default-prestacion.jpg';
        const pageUrl = getPageUrl(prestacion.slug);
        const prestacionUrl = getLocalizedPath(`/${pageUrl}`, lang);

        return (
          <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
            <div class="card h-100">
              <img class="card-img-top" src={imageUrl} alt={prestacion.titulo} loading="lazy" />
              <div class="card-body">
                <h4>
                  <a href={prestacionUrl}>{prestacion.titulo}</a>
                </h4>
                <p>{prestacion.resumen}</p>
                <br />
                <br />
                <a href={prestacionUrl} class="btn btn-primary">
                  {t('common.readMore')} &rarr;
                </a>
              </div>
            </div>
          </div>
        );
      })}
    </div>
    <hr />
  </div>
</div>
