---
/**
 * Componente Breadcrumb - Navegación de migas de pan
 *
 * @param {string} title - Título de la página actual
 * @param {Array} items - Array de items del breadcrumb [{ label: string, href: string }]
 */

interface BreadcrumbItem {
  label: string;
  href: string;
}

interface Props {
  title: string;
  items?: BreadcrumbItem[];
}

const { title, items = [] } = Astro.props;

// Siempre incluir "Inicio" como primer item
const breadcrumbItems: BreadcrumbItem[] = [
  { label: 'Inicio', href: '/' },
  ...items
];
---

<div class="full-title">
  <div class="container"><br>
    <!-- Page Heading/Breadcrumbs -->
    <h1 class="text_blanc breadcrumb-title">{title}</h1><br>
    <div class="breadcrumb-main">
      <ol class="breadcrumb">
        {breadcrumbItems.map((item, index) => (
          <li class="breadcrumb-item">
            <a href={item.href}>{item.label}</a>
          </li>
        ))}
        <li class="breadcrumb-item active">{title}</li>
      </ol>
    </div>
  </div>
</div>

<style>
  .full-title {
    padding: 20px 0;
    min-height: auto;
    position: relative;
    z-index: 100;
  }

  .breadcrumb-title {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }

  .breadcrumb-main {
    display: block;
    width: 100%;
    position: relative;
    z-index: 101;
  }

  .breadcrumb {
    background-color: transparent;
    padding: 0.5rem 0;
    margin-bottom: 0;
    flex-wrap: wrap;
  }

  .breadcrumb-item {
    display: inline-block;
  }

  .breadcrumb-item a {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    cursor: pointer;
    position: relative;
    z-index: 102;
    pointer-events: auto;
  }

  .breadcrumb-item a:hover {
    color: #fff;
    text-decoration: underline;
  }

  .breadcrumb-item.active {
    color: #fff;
  }

  .breadcrumb-item + .breadcrumb-item::before {
    content: "›";
    padding: 0 0.5rem;
    color: rgba(255, 255, 255, 0.6);
  }

  /* Responsive para móvil */
  @media (max-width: 768px) {
    .breadcrumb-title {
      font-size: 1.5rem;
      line-height: 1.3;
      word-wrap: break-word;
    }

    .breadcrumb {
      font-size: 0.9rem;
      padding: 0.5rem 0;
    }

    .breadcrumb-item {
      white-space: normal;
      word-wrap: break-word;
    }

    .breadcrumb-item a {
      /* Larger touch targets for mobile */
      padding: 8px 4px;
      display: inline-block;
      min-height: 44px;
      line-height: 28px;
      -webkit-tap-highlight-color: rgba(255, 255, 255, 0.2);
    }

    .full-title {
      padding: 15px 0;
    }
  }

  @media (max-width: 576px) {
    .breadcrumb-title {
      font-size: 1.25rem;
    }

    .breadcrumb {
      font-size: 0.85rem;
    }

    .breadcrumb-item + .breadcrumb-item::before {
      padding: 0 0.25rem;
    }
  }
</style>
